@inject IHttpContextAccessor HttpContextAccessor

@if (HttpContextAccessor.HttpContext?.User?.Identity?.IsAuthenticated ?? false)
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <span>@HttpContextAccessor.HttpContext.User.Identity.Name</span>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Odhlásit</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-controller="Account" asp-action="Login">Přihlásit</a>
        </li>
        @* Registrace je odstraněna *@
    </ul>
}