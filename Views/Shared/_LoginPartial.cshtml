@* Views/Shared/_LoginPartial.cshtml *@

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right" style="display:inline;">
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right" style="display:inline-flex; align-items:center; gap:8px; list-style:none; margin:0; padding:0;">
            <li>
                <span>@User.Identity.Name</span>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Odhlásit</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right" style="list-style:none; margin:0; padding:0;">
        <li>
            <a asp-controller="Account" asp-action="Login">Přihlásit</a>
        </li>
        @* Registrace je odstraněna *@
    </ul>
}