@model PhotoApp.Models.PhotoRecord
@{
    ViewData["Title"] = Model.Title;
}
<div class="photo-detail">
    <img src="@(Model.ImagePath ?? "/icons/icon-192.png")" alt="@Model.Title" />
    <h2>@Model.Title</h2>
    <p>@Model.Description</p>
    <a asp-action="Index" class="back-link">← Zpět na galerii</a>
</div>

<style>
.photo-detail { display:flex; flex-direction:column; align-items:center; max-width:800px; margin:2rem auto; text-align:center; }
.photo-detail img { width:100%; max-width:700px; border-radius:10px; margin-bottom:1rem; }
.back-link { margin-top:1rem; color:#0078d7; text-decoration:none; }
</style>
