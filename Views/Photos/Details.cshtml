@model PhotoApp.Models.PhotoRecord
@{
    ViewData["Title"] = "Detail vzorku";

    // bezpečné získání publicUrl z ViewBag pokud controller nastavil, jinak sestavit zde
    var publicUrl = ViewBag.PublicUrl as string ?? Url.Action("DetailsAnonymous", "Home", new { id = Model.Id }, Context?.Request?.Scheme ?? "https");
    var qrApi = !string.IsNullOrWhiteSpace(publicUrl)
        ? "https://api.qrserver.com/v1/create-qr-code/?size=240x240&data=" + System.Uri.EscapeDataString(publicUrl)
        : null;

    // použijeme ImagePath pokud existuje, jinak PhotoPath (kompatibilita)
    var imageSrc = !string.IsNullOrWhiteSpace(Model.ImagePath) ? Url.Content(Model.ImagePath) : (string.IsNullOrWhiteSpace(Model.PhotoPath) ? null : Url.Content(Model.PhotoPath));

    string Safe(string s) => string.IsNullOrWhiteSpace(s) ? "-" : Html.Raw(Html.Encode(s)).ToString();
    string SafeDate(DateTime dt) => (dt == DateTime.MinValue) ? "-" : dt.ToLocalTime().ToString("g");
}
<style>
    :root {
        --brand: #16a34a;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --radius: 12px;
    }

    .detail-page {
        max-width: 1100px;
        margin: 30px auto;
        padding: 16px;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        color: var(--text);
    }

    .card {
        background: var(--white);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 20px;
        box-shadow: 0 2px 10px rgba(0,0,0,.05);
    }

    .layout {
        display: grid;
        grid-template-columns: 320px 1fr;
        gap: 20px;
    }

    .media {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
    }

        .media img.detail-img {
            width: 280px;
            height: 280px;
            object-fit: cover;
            border-radius: 10px;
            border: 1.5px solid var(--border);
            background: #f7fef7;
            cursor: zoom-in; /* show that image is clickable */
            transition: transform .12s ease;
        }

            .media img.detail-img:hover {
                transform: scale(1.02);
            }

    .meta {
        width: 100%;
        text-align: center;
    }

        .meta .title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--brand);
            margin-bottom: 6px;
        }

    .qr {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
    }

        .qr img {
            width: 160px;
            height: 160px;
            object-fit: contain;
            border: 1px solid #e3e3e3;
            background: #fff;
            padding: 6px;
        }

    .fields {
        display: grid;
        grid-template-columns: repeat(2, minmax(0,1fr));
        gap: 12px 20px;
    }

    .field {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .label {
        font-weight: 700;
        color: #333;
        width: 100%;
    }

    .value {
        padding: 10px;
        background: #fbfff9;
        border: 1px solid var(--border);
        border-radius: 8px;
        min-height: 34px;
        color: #222;
        white-space: pre-wrap;
        word-break: break-word;
    }

    .full {
        grid-column: 1 / -1;
    }

    .muted {
        color: #666;
        font-size: 0.95rem;
        margin-top: 10px;
    }

    .actions {
        margin-top: 14px;
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn {
        padding: 8px 14px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--white);
        color: var(--brand);
        text-decoration: none;
    }

    @@media (max-width:900px) {
        .layout

    {
        grid-template-columns: 1fr;
    }

    .media img.detail-img {
        width: 200px;
        height: 200px;
    }

    .fields {
        grid-template-columns: 1fr;
    }

    }

    /* Lightbox / fullscreen viewer for clicked image */
    .image-lightbox {
        position: fixed;
        inset: 0;
        display: none;
        align-items: center;
        justify-content: center;
        background: rgba(0,0,0,0.75);
        z-index: 99999;
        padding: 20px;
    }

        .image-lightbox.show {
            display: flex;
            animation: fadeIn 150ms ease;
        }

        .image-lightbox .inner {
            max-width: calc(100% - 40px);
            max-height: calc(100% - 40px);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .image-lightbox img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            border-radius: 8px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.6);
            cursor: zoom-out;
        }

        .image-lightbox .close-btn {
            position: absolute;
            top: 8px;
            right: 8px;
            background: rgba(255,255,255,0.9);
            border-radius: 6px;
            border: none;
            padding: 6px 8px;
            font-weight: 700;
            cursor: pointer;
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }
</style>

<main class="detail-page">

    @* Logo + nadpis - vložte jako první element v <main> *@
    <header style="margin-bottom: 20px;">
        <div class="container" style="display:flex;align-items:center;gap:12px">
            <div class="page-header" style="display:flex;align-items:center;gap:12px">
                <a asp-controller="Photos" asp-action="Index" style="display:inline-block;">
                    <img src="@Url.Content("~/logo.png")" alt="ODPO logo" style="height:48px;width:auto;display:block;" />
                </a>
                <div>
                    <h1 style="margin:0;font-size:18px;color:var(--brand);">Detail vzorku</h1>
                    <div class="muted" style="font-size:13px;">ODPO s.r.o. – Katalog vzorků plastů</div>
                </div>
            </div>
        </div>
    </header>



    <div class="card layout" role="region" aria-label="Detail vzorku">
        <aside class="media" aria-label="Obrázek a veřejný odkaz">
            @if (!string.IsNullOrEmpty(imageSrc))
            {
                <!-- Add data-full attribute so the script can open the full-sized image -->
                <img src="@imageSrc" alt="Fotografie vzorku: @Model.Name" class="detail-img" id="detailImage" data-full="@imageSrc" />
            }
            else
            {
                <div class="detail-img" aria-hidden="true" title="Žádný obrázek"></div>
            }

            <div class="meta">
                <div class="title">@(!string.IsNullOrWhiteSpace(Model.Name) ? Model.Name : "-")</div>
                <div class="muted">Upraveno: @SafeDate(Model.UpdatedAt)</div>
            </div>

            <div class="qr" aria-label="Veřejný odkaz a QR kód">
                <div style="font-weight:700;">Veřejný odkaz (QR)</div>
                @if (!string.IsNullOrWhiteSpace(qrApi))
                {
                    <img src="@qrApi" alt="QR kód veřejného detailu" />
                    <div><a href="@publicUrl" target="_blank" rel="noopener">Otevřít veřejný detail</a></div>
                }
                else
                {
                    <div class="muted">Veřejný odkaz není dostupný.</div>
                }
            </div>
        </aside>

        <section>
            <h2 style="margin-top:0;margin-bottom:12px;">Informace o vzorku</h2>

            <div class="fields" aria-live="polite">
                <div class="field"><div class="label">Pozice</div><div class="value">@Safe(Model.Position?.ToString())</div></div>
                <div class="field"><div class="label">ID</div><div class="value">@Safe(Model.ExternalId)</div></div>

                <div class="field full"><div class="label">Dodavatel</div><div class="value">@Safe(Model.Supplier)</div></div>

                <div class="field full"><div class="label">Původní název</div><div class="value">@Safe(Model.OriginalName)</div></div>

                <div class="field"><div class="label">Materiál</div><div class="value">@Safe(Model.Material)</div></div>
                <div class="field"><div class="label">Forma</div><div class="value">@Safe(Model.Form)</div></div>

                <div class="field"><div class="label">Plnivo</div><div class="value">@Safe(Model.Filler)</div></div>
                <div class="field"><div class="label">Barva</div><div class="value">@Safe(Model.Color)</div></div>

                <div class="field full"><div class="label">Popis</div><div class="value">@Safe(Model.Description)</div></div>

                <div class="field"><div class="label">Množství (měsíc)</div><div class="value">@Safe(Model.MonthlyQuantity?.ToString())</div></div>
                <div class="field"><div class="label">MFI</div><div class="value">@Safe(Model.Mfi)</div></div>

                <div class="field full"><div class="label">Poznámky</div><div class="value">@Safe(Model.Notes)</div></div>

                <div class="field"><div class="label">Vytvořeno</div><div class="value">@SafeDate(Model.CreatedAt)</div></div>
            </div>

            <div class="actions">
                <a asp-controller="Photos" asp-action="Index" class="btn">Zpět na katalog</a>
                <a asp-controller="Photos" asp-action="Edit" asp-route-id="@Model.Id" class="btn">Upravit vzorek</a>
            </div>
        </section>
    </div>
</main>

<!-- Lightbox element placed at end of body/main to display clicked image -->
<div id="imageLightbox" class="image-lightbox" role="dialog" aria-modal="true" aria-hidden="true">
    <div class="inner" role="document">
        <button class="close-btn" id="lightboxClose" aria-label="Zavřít (Esc)">✕</button>
        <img id="lightboxImg" src="" alt="Zvětšená fotografie vzorku" />
    </div>
</div>

<script>
    (function () {
        const detailImg = document.getElementById('detailImage');
        const lightbox = document.getElementById('imageLightbox');
        const lightboxImg = document.getElementById('lightboxImg');
        const closeBtn = document.getElementById('lightboxClose');

        function openLightbox(src, alt) {
            if (!src) return;
            lightboxImg.src = src;
            if (alt) lightboxImg.alt = alt;
            lightbox.classList.add('show');
            lightbox.setAttribute('aria-hidden', 'false');
            // prevent page scroll while open
            document.documentElement.style.overflow = 'hidden';
            document.body.style.overflow = 'hidden';
            // focus close button for accessibility
            closeBtn.focus();
        }

        function closeLightbox() {
            lightbox.classList.remove('show');
            lightbox.setAttribute('aria-hidden', 'true');
            // small timeout to avoid flicker on some browsers when clearing src
            setTimeout(() => { lightboxImg.src = ''; }, 120);
            document.documentElement.style.overflow = '';
            document.body.style.overflow = '';
        }

        // Open when clicking the detail thumbnail (if present)
        if (detailImg) {
            detailImg.addEventListener('click', function (e) {
                const full = detailImg.getAttribute('data-full') || detailImg.src;
                openLightbox(full, detailImg.alt || '');
            });

            // also allow Enter / Space when focused
            detailImg.setAttribute('tabindex', '0');
            detailImg.addEventListener('keydown', function (e) {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    const full = detailImg.getAttribute('data-full') || detailImg.src;
                    openLightbox(full, detailImg.alt || '');
                }
            });
        }

        // Close interactions
        closeBtn.addEventListener('click', closeLightbox);

        // Clicking on overlay (outside the inner image) closes
        lightbox.addEventListener('click', function (e) {
            if (e.target === lightbox) {
                closeLightbox();
            }
        });

        // clicking on image also closes (useful for touch)
        lightboxImg.addEventListener('click', closeLightbox);

        // Close with Escape key
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape' && lightbox.classList.contains('show')) {
                closeLightbox();
            }
        });

        // Prevent accidental drag causing selection on mobile
        lightboxImg.addEventListener('dragstart', function (e) { e.preventDefault(); });

        // Accessibility: simple focus trap while lightbox open
        document.addEventListener('focus', function (event) {
            if (!lightbox.classList.contains('show')) return;
            if (!lightbox.contains(event.target)) {
                event.stopPropagation();
                closeBtn.focus();
            }
        }, true);
    })();
</script>