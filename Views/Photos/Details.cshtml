@model PhotoApp.Models.PhotoRecord
@{
    ViewData["Title"] = "Detail vzorku";
    // bezpečné získání publicUrl z ViewBag pokud controller nastavil, jinak sestavit zde
    var publicUrl = ViewBag.PublicUrl as string ?? Url.Action("DetailsAnonymous", "Home", new { id = Model.Id }, Context?.Request?.Scheme ?? "https");
    var qrApi = !string.IsNullOrWhiteSpace(publicUrl)
        ? "https://api.qrserver.com/v1/create-qr-code/?size=240x240&data=" + System.Uri.EscapeDataString(publicUrl)
        : null;
    // použijeme ImagePath pokud existuje, jinak PhotoPath (kompatibilita)
    var imageSrc = !string.IsNullOrWhiteSpace(Model.ImagePath) ? Url.Content(Model.ImagePath) : (string.IsNullOrWhiteSpace(Model.PhotoPath) ? null : Url.Content(Model.PhotoPath));
}
<style>
    :root {
        --brand: #16a34a;
        --brand-dark: #166534;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --radius: 12px;
    }

    body {
        font-family: system-ui,-apple-system,Segoe UI,Roboto,Ubuntu;
        color: var(--text);
        background: var(--bg);
    }

    .detail-card {
        background: #fff;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 2.5rem 2rem;
        margin: 45px auto;
        max-width: 640px;
        box-shadow: 0 2px 8px rgba(0,0,0,.08);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .detail-img {
        width: 240px;
        height: 240px;
        object-fit: cover;
        border-radius: 14px;
        border: 1.5px solid var(--border);
        margin-bottom: 1.4rem;
        background: #e6f9e9;
    }

    .detail-title {
        font-size: 2rem;
        color: var(--brand-dark);
        font-weight: 700;
        margin-bottom: 0.6rem;
    }

    .detail-info {
        margin-bottom: 1.2rem;
        color: #444;
        width: 100%;
        max-width: 520px;
        text-align: left;
    }

        .detail-info .row {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
            align-items: center;
            margin-bottom: 8px;
        }

        .detail-info strong {
            width: 110px;
            display: inline-block;
            color: #222;
        }

    .pill {
        display: inline-block;
        padding: 2px 9px;
        border-radius: 999px;
        background: #eff9f0;
        border: 1px solid var(--border);
        font-size: 15px;
        color: var(--brand-dark);
        margin-left: 6px;
    }

    .muted {
        color: #666;
        font-size: 1rem;
        margin-top: 1.3em;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--white);
        color: var(--brand-dark);
        cursor: pointer;
        font-weight: 500;
        margin-top: 2em;
        text-decoration: none;
        display: inline-block;
    }

        .btn:hover {
            background: #e6f9e9;
        }

    .qr-block {
        margin-top: 12px;
        display: flex;
        gap: 12px;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

    .qr-img {
        width: 160px;
        height: 160px;
        border: 1px solid #ddd;
        padding: 6px;
        background: #fff;
        display: inline-block;
        object-fit: contain;
    }

    .qr-note {
        font-size: .9rem;
        color: #444;
    }

    /* responsive */
    @@media (max-width: 640px) {
        .detail-card {
            padding: 1.6rem;
            margin: 24px 12px;
            max-width: calc(100% - 24px);
        }

        .detail-img {
            width: 160px;
            height: 160px;
        }

        .detail-info strong {
            width: 120px;
        }
    }
</style>

<div class="detail-card">
    @if (!string.IsNullOrEmpty(imageSrc))
    {
        <img src="@imageSrc" class="detail-img" alt="Foto vzorku - @Model.Name" />
    }
    else
    {
        <div class="detail-img" aria-hidden="true" title="Žádný obrázek"> </div>
    }

    <div class="detail-title">@Model.Name</div>

    <div class="detail-info" aria-label="Informace o vzorku">
        <div class="row"><strong>Kód:</strong> <span>@Model.Code</span></div>
        <div class="row"><strong>Typ:</strong> <span>@Model.Type</span></div>
        @if (!string.IsNullOrWhiteSpace(Model.Supplier))
        {
            <div class="row"><strong>Dodavatel:</strong> <span class="pill">@Model.Supplier</span></div>
        }
        @if (!string.IsNullOrWhiteSpace(Model.Material) || !string.IsNullOrWhiteSpace(Model.Form) || !string.IsNullOrWhiteSpace(Model.Filler))
        {
            <div class="row">
                <strong>Specifikace:</strong>
                <span>@Model.Material</span>
                @if (!string.IsNullOrWhiteSpace(Model.Form))
                {
                    <span>· @Model.Form</span>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Filler))
                {
                    <span>· plnivo: @Model.Filler</span>
                }
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(Model.Color))
        {
            <div class="row"><strong>Barva:</strong> <span>@Model.Color</span></div>
        }
        @if (!string.IsNullOrWhiteSpace(Model.Mfi))
        {
            <div class="row"><strong>MFI:</strong> <span>@Model.Mfi</span></div>
        }
        <div class="row" style="margin-top:8px;"><strong>Poznámky:</strong> <div>@Model.Notes</div></div>
    </div>

    <div class="qr-block" aria-label="Veřejný odkaz a QR kód">
        <div><strong>Veřejný odkaz (QR):</strong></div>

        @if (!string.IsNullOrWhiteSpace(qrApi))
        {
            <img src="@qrApi" alt="QR kód veřejného detailu" class="qr-img" />
            <div class="qr-note"><a href="@publicUrl" target="_blank" rel="noopener">Otevřít veřejný detail</a></div>
        }
        else
        {
            <div class="qr-note">Veřejný odkaz není dostupný.</div>
        }
    </div>

    <div class="muted">Upraveno: @((Model.UpdatedAt == DateTime.MinValue) ? "-" : Model.UpdatedAt.ToLocalTime().ToString("g"))</div>
    <a asp-controller="Photos" asp-action="Index" class="btn">Zpět na katalog</a>
</div>