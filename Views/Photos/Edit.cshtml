@model PhotoApp.Models.PhotoRecord

@{
    ViewData["Title"] = "Upravit vzorek";
}

<style>
    :root {
        --brand: #16a34a;
        --brand-dark: #166534;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --pad: 12px;
        --gap: 8px;
        --radius: 12px;
    }

    * {
        box-sizing: border-box
    }

    body {
        margin: 0;
        font-family: system-ui,-apple-system,Segoe UI,Roboto,Ubuntu;
        color: var(--text);
        background: var(--bg);
    }

    header {
        position: sticky;
        top: 0;
        z-index: 5;
        background: #fff;
        border-bottom: 1px solid var(--border);
    }

    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 14px var(--pad);
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 12px
    }

        .brand img {
            height: 36px;
            width: auto
        }

    h1 {
        margin: 0;
        font-size: 18px;
        font-weight: 700;
        color: var(--brand-dark);
    }

    .card, .center-form-container {
        background: #fff;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 2rem 2.2rem 2rem 2.2rem;
        margin: 40px auto 0 auto;
        max-width: 760px;
        box-shadow: 0 2px 8px rgba(0,0,0,.08);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .center-form-container h2 {
            margin-bottom: 1.8rem;
            text-align: center;
            font-size: 1.6rem;
            color: var(--brand-dark);
        }

    .styled-form {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px 18px;
        align-items: start;
    }

    .full {
        grid-column: 1 / -1;
    }

    .form-group {
        margin-bottom: 1.4rem;
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: #333;
        }

    .form-control {
        padding: 0.5rem 0.9rem;
        border: 1px solid #cfd8dc;
        border-radius: 7px;
        font-size: 1rem;
        transition: border-color 0.15s;
    }

        .form-control:focus {
            outline: none;
            border-color: #0078d7;
        }

    .form-control-file {
        margin-top: 0.5rem;
        font-size: 1rem;
    }

    .btn-primary {
        background: var(--brand);
        color: #fff;
        padding: 0.7rem 1.6rem;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s ease;
        margin-top: 0.2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,.03);
    }

        .btn-primary:hover {
            background: var(--brand-dark);
        }

    .btn {
        padding: 8px 16px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--white);
        color: var(--brand-dark);
        cursor: pointer;
        font-weight: 500;
        margin-left: 10px;
        text-decoration: none;
        display: inline-block;
    }

        .btn:hover {
            background: #e6f9e9;
        }

    .preview-img {
        width: 180px;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
        border: 1px solid var(--border);
        margin-top: 10px;
    }

    .field-validation {
        color: #b91c1c;
        font-size: 0.95rem;
        margin-top: 6px;
    }

    @@media (max-width: 640px) {
        .styled-form

    {
        grid-template-columns: 1fr;
    }

    }
</style>

<header>
    <div class="container" style="display:flex;align-items:center;gap:12px">
        <div class="page-header" style="display:flex;align-items:center;gap:12px">
            <a asp-controller="Photos" asp-action="Index" style="display:inline-block;">
                <img src="@Url.Content("~/logo.png")" alt="ODPO logo" style="height:48px;width:auto;display:block;" />
            </a>
            <div>
                <h1 style="margin:0;font-size:18px;color:var(--brand);">Detail vzorku</h1>
                <div class="muted" style="font-size:13px;">ODPO s.r.o. – Katalog vzorků plastů</div>
            </div>
        </div>
    </div>
</header>

<main class="container">
    <div class="center-form-container">
        <h2>Upravit vzorek</h2>

        <form asp-action="Edit" enctype="multipart/form-data" method="post" class="styled-form" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <!-- Pořadí polí upravené podle tvého požadavku -->
            <div class="form-group">
                <label asp-for="Position">Pozice</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="ExternalId">ID</label>
                <input asp-for="ExternalId" class="form-control" />
                <span asp-validation-for="ExternalId" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Supplier">Dodavatel</label>
                <input asp-for="Supplier" class="form-control" />
                <span asp-validation-for="Supplier" class="field-validation"></span>
            </div>

            <div class="form-group full">
                <label asp-for="OriginalName">Původní název</label>
                <input asp-for="OriginalName" class="form-control" />
                <span asp-validation-for="OriginalName" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Material">Materiál</label>
                <input asp-for="Material" class="form-control" />
                <span asp-validation-for="Material" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Form">Forma</label>
                <input asp-for="Form" class="form-control" />
                <span asp-validation-for="Form" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Filler">Plnivo</label>
                <input asp-for="Filler" class="form-control" />
                <span asp-validation-for="Filler" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color">Barva</label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="field-validation"></span>
            </div>

            <div class="form-group full">
                <label asp-for="Description">Popis</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="MonthlyQuantity">Množství (měsíc)</label>
                <input asp-for="MonthlyQuantity" class="form-control" />
                <span asp-validation-for="MonthlyQuantity" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mfi">MFI</label>
                <input asp-for="Mfi" class="form-control" />
                <span asp-validation-for="Mfi" class="field-validation"></span>
            </div>

            <div class="form-group full">
                <label asp-for="Notes">Poznámky</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label for="PhotoFile">Fotka (nový soubor)</label>
                <input type="file" name="PhotoFile" id="PhotoFile" class="form-control-file" accept="image/*" />
                <span class="field-validation" id="photoError"></span>
            </div>

            <div class="form-group">
                <label>Náhled aktuální fotky</label>
                @{
                    var imageSrc = !string.IsNullOrWhiteSpace(Model.ImagePath) ? Url.Content(Model.ImagePath) : (!string.IsNullOrWhiteSpace(Model.PhotoPath) ? Url.Content(Model.PhotoPath) : null);
                }
                @if (!string.IsNullOrEmpty(imageSrc))
                {
                    <img id="CurrentPhotoPreview" src="@imageSrc" class="preview-img" alt="Aktuální obrázek" />
                }
                else
                {
                    <div style="width:180px;height:180px;border:1px solid var(--border);border-radius:10px;background:#f6faf6;display:flex;align-items:center;justify-content:center;color:#888">Žádný obrázek</div>
                }
            </div>

            <div class="form-group full" style="display:flex;gap:12px;justify-content:flex-end;margin-top:10px;">
                <a href="@Url.Action("Index")" class="btn">Zpět</a>
                <button type="submit" class="btn-primary">Uložit změny</button>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <script>
        // preview nově vybraného souboru (zobrazení místo/nebo vedle aktuálního obrázku)
        document.getElementById('PhotoFile')?.addEventListener('change', function (e) {
            const input = e.target;
            const err = document.getElementById('photoError');
            err.textContent = '';
            const current = document.getElementById('CurrentPhotoPreview');
            if (input.files && input.files[0]) {
                const file = input.files[0];
                if (!file.type.startsWith('image/')) {
                    err.textContent = 'Prosím vyberte obrázek.';
                    return;
                }
                const reader = new FileReader();
                reader.onload = function (ev) {
                    if (current) {
                        current.src = ev.target.result;
                    } else {
                        // pokud není element, vytvoříme náhled pod inputem
                        const img = document.createElement('img');
                        img.id = 'CurrentPhotoPreview';
                        img.className = 'preview-img';
                        img.src = ev.target.result;
                        input.parentNode.appendChild(img);
                    }
                };
                reader.readAsDataURL(file);
            }
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}