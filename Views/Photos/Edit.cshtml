@model PhotoApp.Models.PhotoRecord

@{
    ViewData["Title"] = "Upravit vzorek";
}

<div class="center-form-container">
    <h2>Upravit vzorek</h2>

    <form asp-action="Edit" enctype="multipart/form-data" method="post" class="styled-form">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="Name">Název</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Code">Kód</label>
            <input asp-for="Code" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Type">Typ</label>
            <input asp-for="Type" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Supplier">Dodavatel</label>
            <input asp-for="Supplier" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Notes">Poznámky</label>
            <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
        </div>
        <div class="form-group">
            <label for="PhotoFile">Obrázek</label>
            <input type="file" name="PhotoFile" class="form-control-file" />
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <div>
                    <img src="@Model.PhotoPath" style="width:80px;height:80px;object-fit:cover;border-radius:8px;border:1px solid #dbe7d9;margin-top:8px;" alt="Aktuální obrázek" />
                </div>
            }
        </div>
        <button type="submit" class="btn-primary">Uložit změny</button>
        <a href="@Url.Action("Index")" class="btn">Zpět</a>
    </form>
</div>