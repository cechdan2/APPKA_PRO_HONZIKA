@{
    ViewData["Title"] = "Import z Excelu";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<h2>Import z Excelu (.xlsx)</h2>

<form asp-action="Import" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div>
        <label for="excelFile">Vyberte soubor (.xlsx):</label>
        <input type="file" name="excelFile" id="excelFile" accept=".xlsx" />
    </div>
    <div style="margin-top:12px;">
        <button type="submit" class="btn">Importovat</button>
        <a href="@Url.Action("Index", "Photos")" class="btn">Zpět</a>
    </div>
</form>

@if (TempData["ImportResult"] != null)
{
    <div style="margin-top:12px;">
        <strong>@TempData["ImportResult"]</strong>
        <div style="color:darkred;">@TempData["ImportWarnings"]</div>
    </div>
}