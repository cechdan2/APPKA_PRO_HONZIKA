    <button id="toggleSupplierBtn">Schovat dodavatele</button>

    <script>
        document.getElementById("toggleSupplierBtn").addEventListener("click", function() {
            // najdi všechny buňky ve sloupci "Dodavatel" (včetně hlavičky)
            const table = document.querySelector("#tableView table");
            const supplierIndex = Array.from(table.querySelectorAll("th"))
                .findIndex(th => th.textContent.trim() === "Dodavatel");

            if (supplierIndex === -1) return; // bezpečnostní kontrola

            const rows = table.querySelectorAll("tr");
            let hidden = false;

            // zjisti, jestli je sloupec právě schovaný
            if (rows[0].querySelectorAll("th, td")[supplierIndex].style.display === "none") {
                hidden = true;
            }

            // přepni viditelnost všech buněk v tomto sloupci
            rows.forEach(row => {
                const cell = row.querySelectorAll("th, td")[supplierIndex];
                if (cell) {
                    cell.style.display = hidden ? "" : "none";
                }
            });

            // změna textu tlačítka
            this.textContent = hidden ? "Schovat dodavatele" : "Zobrazit dodavatele";
        });
    </script>


