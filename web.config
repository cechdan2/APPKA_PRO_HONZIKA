<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<system.webServer>
		<security>
			<requestFiltering>
				<!-- 1 GB = 1073741824 bytes -->
				<requestLimits maxAllowedContentLength="1073741824" />
			</requestFiltering>
		</security>

		<!-- Pozn.: serverRuntime uploadReadAheadSize NENÍ ZDE. -->
		<!-- Pokud potřebuješ uploadReadAheadSize, nastav ho na úrovni IIS / applicationhost.config nebo pomocí appcmd. -->

		<handlers>
			<add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
		</handlers>

		<aspNetCore processPath="dotnet" arguments=".\PhotoApp.dll" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" hostingModel="inprocess" />
	</system.webServer>
</configuration>